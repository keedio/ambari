{{#unless isServerClientVersionMismatch}}
<div class="well login span4 customlogin" >
  <img class="navbar-brand-icon" src="/img/kds_login.svg" alt="" style="width: 850px; margin-bottom:10px;">
  {{#if errorMessage}}
  <div class="alert alert-error">
    {{errorMessage}}
  </div>
  {{/if}}

  {{view view.loginTextField valueBinding="loginName" class="inputloging span4" placeholder="User Name" disabledBinding="isSubmitDisabled"}}
  
  {{view view.passTextField type="password" valueBinding="password" class="inputloging span4" placeholder="Password" disabledBinding="isSubmitDisabled"}}

    <button class="btnlogin" {{bindAttr disabled="isSubmitDisabled"}} {{action "submit" target="controller"}}>{{t login.loginButton}}</button>
</div>
{{/unless}}